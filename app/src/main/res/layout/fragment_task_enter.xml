<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Button"
        tools:layout_editor_absoluteX="286dp"
        tools:layout_editor_absoluteY="174dp" />

    <EditText
        android:id="@+id/enterTask"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="text"
        android:text="@string/enter_task_default_text"
        tools:layout_editor_absoluteX="166dp"
        tools:layout_editor_absoluteY="54dp" />

    <EditText
        android:id="@+id/enterTaskdoer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="text"
        android:text="@string/enter_taskdoer_default_text"
        tools:layout_editor_absoluteX="166dp"
        tools:layout_editor_absoluteY="112dp"


        />

    <TextView
        android:id="@+id/TaskTextLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/enter_task_text_label"
        tools:layout_editor_absoluteX="44dp"
        tools:layout_editor_absoluteY="63dp" />

    <TextView
        android:id="@+id/TaskdoerTextLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/taskdoer_text_label"
        tools:layout_editor_absoluteX="44dp"
        tools:layout_editor_absoluteY="123dp" />
</androidx.constraintlayout.widget.ConstraintLayout>